<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".CreateEventActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ProgressBar
                android:id="@+id/progressBarView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />


            <LinearLayout
                android:id="@+id/buttonsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/whatView"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="What is the event about ?" />

                <Button
                    android:id="@+id/whereView"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Where is the event ?" />

                <Button
                    android:id="@+id/whenView"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="When is the event?" />

                <Button
                    android:id="@+id/boundsView"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Bounds for the event" />

                <Button
                    android:id="@+id/contactView"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Who to contact for more information?" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/buttonsLayout" />


        </RelativeLayout>
    </ScrollView>

    <include
        android:id="@+id/layout_bottom_nav"
        layout="@layout/layout_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true" />
</RelativeLayout>