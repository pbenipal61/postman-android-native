<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Fragments.CreateEventWhatFragment"
    android:orientation="vertical">


    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="What is the event about?"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="100"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="70"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Type"/>
        <Spinner
            android:layout_weight="30"

            android:layout_width="match_parent"
            android:padding="@dimen/profilepage_edittext_padding"
            android:layout_height="50dp"
            android:hint="Type"
            android:id="@+id/typeView"
            android:layout_marginTop="@dimen/profile_edittext_margin_top"
            android:inputType="text"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="100"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="70"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Title"/>
        <EditText
            android:layout_weight="30"

            android:layout_width="match_parent"
            android:padding="@dimen/profilepage_edittext_padding"
            android:layout_height="50dp"
            android:hint="Title"
            android:id="@+id/titleView"
            android:layout_marginTop="@dimen/profile_edittext_margin_top"
            android:inputType="text"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="100"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="70"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Message"/>
        <EditText
            android:layout_weight="30"

            android:layout_width="match_parent"
            android:padding="@dimen/profilepage_edittext_padding"
            android:layout_height="50dp"
            android:hint="Message"

            android:id="@+id/messageView"
            android:layout_marginTop="@dimen/profile_edittext_margin_top"
            android:inputType="text"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="100"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="70"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Instructions"/>
        <EditText
            android:layout_weight="30"

            android:layout_width="match_parent"
            android:padding="@dimen/profilepage_edittext_padding"
            android:layout_height="50dp"
            android:hint="Instructions"

            android:id="@+id/instructionsView"
            android:layout_marginTop="@dimen/profile_edittext_margin_top"
            android:inputType="text"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="50dp"
        android:text="save"
        android:id="@+id/saveView"/>

</LinearLayout>